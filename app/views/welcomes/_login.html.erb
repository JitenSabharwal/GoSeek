<%=form_tag "login" %>
    <div class="form-group">
		<%=label_tag :email %>
	</div>
    <div class="form-group">
		<%=email_field_tag :email,nil,class: "form-control input-lg"%>
	</div>
    <div class="form-group">
		<%=label_tag :password %>
	</div>
    <div class="form-group">
		<%=password_field_tag :password,nil,class: "form-control input-lg"%>
	</div>
    <div class="form-group">
		<%=submit_tag "login" ,class: "btn btn-primary"%>
	</div>
